<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="xyz.belochka.filemanager.Controller">
    <padding>
        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
    </padding>
    <MenuBar>
        <Menu text="Файл">
            <MenuItem text="Выйти" onAction="#btnExitAction"/>
        </Menu>
    </MenuBar>
    <HBox>
        <ComboBox />
        <TextField editable="false" HBox.hgrow="ALWAYS" />
        <Button text="Вверх" />
    </HBox>
    <TableView VBox.vgrow="ALWAYS" fx:id="filesTable"/>
    <HBox spacing="5">
        <Button maxWidth="Infinity" text="Копировать" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Переместить" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Удалить" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Выход" HBox.hgrow="ALWAYS" onAction="#btnExitAction"/>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" />
      </padding>
    </HBox>
</VBox>
